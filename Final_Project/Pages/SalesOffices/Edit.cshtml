@page
@model Final_Project.Pages.SalesOffices.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Sales Office</h1>

<h4>@Html.DisplayFor(model => model.SalesOffice.SalesOfficeName), @Html.DisplayFor(model => model.SalesOffice.City.Name)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SalesOffice.SalesOfficeId" />
            <div class="form-group">
                <label asp-for="SalesOffice.City.Name" class="control-label"></label>
                <select asp-for="SalesOffice.CityId" class="form-control" asp-items="ViewBag.CityId"></select>
                <span asp-validation-for="SalesOffice.CityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesOffice.SalesOfficeName" class="control-label"></label>
                <input asp-for="SalesOffice.SalesOfficeName" class="form-control" />
                <span asp-validation-for="SalesOffice.SalesOfficeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
