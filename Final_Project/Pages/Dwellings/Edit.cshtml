@page
@model Final_Project.Pages.Dwellings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Dwelling</h1>

<h4>@Html.DisplayFor(model => model.Dwelling.Address)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dwelling.DwellingId" />
            <div class="form-group">
                <label asp-for="Dwelling.Address" class="control-label"></label>
                <input asp-for="Dwelling.Address" class="form-control" />
                <span asp-validation-for="Dwelling.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dwelling.CityId" class="control-label"></label>
                <select asp-for="Dwelling.CityId" class="form-control" asp-items="ViewBag.CityId"></select>
                <span asp-validation-for="Dwelling.CityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dwelling.Zip" class="control-label"></label>
                <input asp-for="Dwelling.Zip" class="form-control" />
                <span asp-validation-for="Dwelling.Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dwelling.Type" class="control-label"></label>
                <input asp-for="Dwelling.Type" class="form-control" />
                <span asp-validation-for="Dwelling.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dwelling.AgentId" class="control-label">Agent Name</label>
                <select asp-for="Dwelling.AgentId" class="form-control" asp-items="ViewBag.AgentId"></select>
                <span asp-validation-for="Dwelling.AgentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dwelling.Price" class="control-label"></label>
                <input asp-for="Dwelling.Price" class="form-control" />
                <span asp-validation-for="Dwelling.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
