@page
@model Final_Project.Pages.Cities.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>City Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.City.Name), @Html.DisplayFor(model => model.City.State) @Html.DisplayFor(model => model.City.Zip)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City.Zip)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.Zip)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City.numDwellings)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.numDwellings)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th class=" badge badge-danger">Dwellings in This City:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.City.Dwellings)
        {
            <tr>
                <td>
                    <a href="/Dwellings/Details?id=@Html.DisplayFor(modelItem => item.DwellingId)">@Html.DisplayFor(modelItem => item.Address)</a>
                </td>
            </tr>
        }
    </tbody>

</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.City.CityId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
